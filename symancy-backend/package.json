{
  "name": "symancy-backend",
  "version": "0.6.8",
  "description": "Symancy Telegram Bot Backend - Node.js migration from n8n",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "setup:bot": "tsx scripts/setup-bot.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@grammyjs/auto-retry": "^2.0.2",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@langchain/community": "^0.3.57",
    "@langchain/core": "^1.1.8",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/langgraph-checkpoint-postgres": "^1.0.0",
    "@langchain/openai": "^1.2.0",
    "@supabase/supabase-js": "^2.80.0",
    "@symancy/shared-types": "workspace:*",
    "fastify": "^5.6.2",
    "grammy": "^1.38.4",
    "jsonwebtoken": "^9.0.3",
    "lru-cache": "^11.2.4",
    "nanoid": "^5.1.6",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "pg-boss": "^12.5.4",
    "pino": "^10.1.0",
    "sharp": "^0.34.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.11",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.3",
    "pino-pretty": "^13.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5"
  },
  "keywords": [
    "telegram",
    "bot",
    "langchain",
    "langgraph",
    "supabase"
  ],
  "author": "",
  "license": "UNLICENSED",
  "private": true
}
