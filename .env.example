# =============================================================================
# Symancy Frontend Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
# Get from Supabase Dashboard -> Settings -> API
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------------------------------
# Telegram Integration
# -----------------------------------------------------------------------------
# Your Telegram bot username (without @)
VITE_TELEGRAM_BOT_NAME=symancy_bot

# -----------------------------------------------------------------------------
# Backend API
# -----------------------------------------------------------------------------
# Backend API base URL (optional, defaults to empty string for relative URLs)
# Development: http://localhost:3000
# Production: leave empty to use relative URLs
VITE_API_URL=
